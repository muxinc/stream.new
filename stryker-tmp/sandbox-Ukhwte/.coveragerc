# Coverage configuration file for additional settings

[run]
# Source directories to include
source = components, lib, pages, util

# Files to omit from coverage
omit = 
    */test/*
    */tests/*
    */__tests__/*
    *.test.js
    *.test.ts
    *.test.jsx
    *.test.tsx
    *.spec.js
    *.spec.ts
    *.spec.jsx
    *.spec.tsx
    */node_modules/*
    */.next/*
    */coverage/*
    pages/_app.tsx
    pages/_document.tsx
    pages/_middleware.tsx
    next.config.js
    jest.config.js
    style-vars.js

[report]
# Include line numbers in reports
show_missing = True

# Skip covered files in report
skip_covered = False

# Precision for percentages
precision = 2

[html]
# HTML report directory
directory = coverage/html

[xml]
# XML report output
output = coverage/coverage.xml